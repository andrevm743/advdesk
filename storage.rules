rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /tenants/{tenantId}/{allPaths=**} {
      // Only allow reads/writes from authenticated users of the same tenant
      allow read: if request.auth != null
        && firestore.exists(/databases/(default)/documents/tenants/$(tenantId)/users/$(request.auth.uid));
      allow write: if request.auth != null
        && firestore.exists(/databases/(default)/documents/tenants/$(tenantId)/users/$(request.auth.uid))
        && request.resource.size < 50 * 1024 * 1024; // 50MB max
    }
  }
}
