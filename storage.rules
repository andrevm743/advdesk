rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /tenants/{tenantId}/{allPaths=**} {
      // Allow any authenticated user to read files in their tenant path.
      // tenantId is validated server-side by Cloud Functions on sensitive operations.
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024; // 50MB max
    }
  }
}
